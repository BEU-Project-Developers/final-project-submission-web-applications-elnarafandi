@model IEnumerable<Blog>

<div class="container my-4">

    <!-- Heading -->
    <h1 class="text-center text-dark mb-4">Blog Management</h1>

    <!-- Create New Blog Button (Between Title and Table) -->
    <div class="d-flex justify-content-start mb-4">
        <a asp-area="Admin" asp-controller="Blog" asp-action="Create" class="btn btn-success">+ Create New Blog</a>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th class="text-start">Title</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var blog in Model)
                {
                    <tr>
                        <td>@blog.Title</td>
                        <td class="text-center">
                            <a asp-action="Detail" asp-route-id="@blog.Id" class="btn btn-info btn-sm me-2">Detail</a>
                            <a asp-action="Edit" method="post" asp-route-id="@blog.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                            <form asp-action="Delete" method="post" asp-route-id="@blog.Id" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>