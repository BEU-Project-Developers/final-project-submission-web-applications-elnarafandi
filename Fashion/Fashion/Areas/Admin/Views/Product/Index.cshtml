@model IEnumerable<Product>

<div class="container my-4">

    <!-- Heading -->
    <h1 class="text-center text-dark mb-4">Product Management</h1>

    <!-- Create New Product Button (Between Title and Table) -->
    <div class="d-flex justify-content-start mb-4">
        <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-success">+ Create New Product</a>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th class="text-start">Name</th>
                    <th class="text-start">Category</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Category</td>
                        <td class="text-center">
                            <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-info btn-sm me-2">Detail</a>
                            <a asp-action="Edit" method="post" asp-route-id="@product.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                            <form asp-action="Delete" method="post" asp-route-id="@product.Id" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>