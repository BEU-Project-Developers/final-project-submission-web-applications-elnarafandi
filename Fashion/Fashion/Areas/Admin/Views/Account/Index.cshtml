@model IEnumerable<UserRolesDto>


<div class="container my-4">

    <!-- Heading -->
    <h1 class="text-center text-dark mb-4">User Management</h1>


    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th class="text-start">Username</th>
                    <th class="text-start">Role</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Fake user entries -->
                @foreach(var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@string.Join(",", user.Roles)</td>
                        <td class="text-center">
                            <a asp-action="Detail" asp-route-id="@user.Id" class="btn btn-info btn-sm me-2">Detail</a>
                            <form asp-action="Delete" method="post" asp-route-id="@user.Id" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
