@model Product

@{
    ViewData["Title"] = "Shop Deatil Page";
}


<div class="container py-5">
    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="~/img/product/@(Model.ProductImages.FirstOrDefault(m => m.IsMain == true)?.Name)" class="card-img-top" alt="Product Image">
                <div class="card-body text-center">
                    <div class="row g-2 justify-content-center">
                        @foreach (var image in Model.ProductImages.Where(m => !m.IsMain))
                        {
                            <div class="col-3">
                                <img src="~/img/product/@image.Name" class="img-thumbnail" alt="Thumbnail">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>


        <!-- Product Details -->
        <div class="col-md-6">
            <h1 style="font-size: 2rem; color: #333; font-weight: bold; margin-bottom: 10px;">@Model.Name</h1>
            <h3 style="font-size: 1.2rem; color: #6c757d; margin-bottom: 8px;">Category: <span style="color: #343a40; font-weight: 600;">@Model.Category.Name</span></h3>
            <h5 style="font-size: 1rem; color: #6c757d; margin-bottom: 15px;">Size: <span style="color: #343a40; font-weight: 600;">@Model.Size</span></h5>

            <div style="margin-bottom: 20px;">
                <span style="font-size: 1.8rem; font-weight: 700; color: #28a745;">$299.99</span>
            </div>

            <p style="color: #6c757d; font-size: 1rem;">
                @Model.Description
            </p>
        </div>
    </div>
</div>
